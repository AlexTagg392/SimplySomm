<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand text-center" href="/" id="nav">Simply Somm</a>
</nav>

<container>
    <div id="wine-landing" class="col-md">
        <img src="./assets/wine.jpeg" id="wineimg" />
        <div id="search-container">
            <form>
                <h2 class="search-title">Find a Wine</h2>
                <div class="form-group">
                    <small class="form-text search-criteria">Find a wine by flavour profile, aroma profile,
                        or both!</small>
                    <label for="taste">Taste</label>
                    <select class="form-control" id="taste">
                        {{#each tastes}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="aroma">Aroma</label>
                    <select class="form-control" id="aroma">
                        {{#each tastes}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary submit">
                    Find your wines!
                </button>
            </form>
            {{#each drinks}}
                <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="..." alt="Card image cap" />
              <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">
                  Some quick example text to build on the card title and make up
                  the bulk of the card's content.
                </p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>
            {{/each}}
        </div>
    </div>
</container>
<script type="text/javascript" src="/js/wine.js"></script>