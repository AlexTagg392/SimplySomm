<nav class="navbar">
    <a class="navbar-text text-center" href="/" id="nav">Simply Somm</a>
</nav>

<container>
    <div id="wine-landing" class="col-md">
        <img src="./assets/wine.jpeg" id="wineimg" />
        <div id="search-container">
            <form>
                <h2 class="search-title">Find a Wine</h2>
                <div class="form-group">
                    <small class="form-text search-criteria">Find a wine by flavour and aroma profile!</small>
                    <label for="taste">Taste</label>
                    <select class="form-control" id="taste">
                        {{#each tastes}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="aroma">Aroma</label>
                    <select class="form-control" id="aroma">
                        {{#each tastes}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button class="btn btn-primary submit">
                    Find your wines!
                </button>
            </form>
            <div class="drink-info">

            </div>
        </div>
    </div>
</container>
<script type="text/javascript" src="/js/wine.js"></script>