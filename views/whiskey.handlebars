<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand text-center" href="/" id="nav">Simply Somm</a>
</nav>

<container>
    <div id="whiskey-landing" class="col-md">
        <img src="./assets/whiskey.jpg" id="whiskeyimg" />
        <div id="search-container">
            <form>
            <h2 class="search-title">Find a Whiskey</h2>
                <div class="form-group">
                    <small class="form-text search-criteria">Find a whiskey by flavour profile, aroma
                        profile, or both!</small>
                    <label for="taste">Taste</label>
                    <select class="form-control" id="taste">
                        {{#each tastes}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="aroma">Aroma</label>
                    <select class="form-control" id="aroma">
                        {{#each aromas}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}

                    </select>
                </div>
                <button class="btn btn-primary submit">
                    Find your whiskeys!
                </button>
            </form>
              {{#each whiskey}}
                <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="..." alt="Card image cap" />
              <div class="card-body">
                <h5 class="card-title">{{ this.name }}</h5>
                <p class="card-text">
                    {{ brand }}
                    {{ price }}
                </p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>
            {{/each}}
        </div>
    </div>
</container>
  <script type="text/javascript" src="/js/whiskey.js"></script>
